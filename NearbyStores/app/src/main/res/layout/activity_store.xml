<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context="com.huawei.hms.nearby.beacondemo.consumer.ui.StoreActivity">



    <TextView
        android:id="@+id/tv_search_store_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search_tip" />

    <LinearLayout
        android:id="@+id/ll_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp"
        android:layout_centerInParent="true"
        android:gravity="center">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Loading..." />
    </LinearLayout>

    <ListView
        android:id="@+id/lv_store"
        android:layout_below="@id/tv_search_store_tip"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>